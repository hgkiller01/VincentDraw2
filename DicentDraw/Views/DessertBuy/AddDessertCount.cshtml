@model DicentDraw.Models.ViewModels.AddDessertViewModel

@{
    ViewBag.Title = "增加購買數量";
}
<div class="col-md-12">
    <h4 class="text-center text-primary">請選擇數量</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DessertID)
        <div class="col-md-4 col-md-offset-2">
            <img class="img-rounded" src="@Url.Content("~/images/"+ Model.DessertImage)" />
        </div>
        <div class="col-md-6">
            @Html.DisplayFor(model => model.DessertIntroduction)
        </div>
        <div class="col-md-6">
           <span class="text-primary">價格:</span><span class="text-danger">@Html.DisplayFor(model => model.DessertPrice)</span> 
        </div>
        <div class="col-md-6">
            數量:@Html.EditorFor(model => model.DessertAmount, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.DessertAmount,"", new { @class = "text-danger" })
        </div>
        <div class="col-md-6 col-lg-offset-5">
            <button class="k-button ">確定</button>
            @Html.ActionLink("取消", "Index",null,  new { @class = "k-button" })
        </div>
    }


</div>
