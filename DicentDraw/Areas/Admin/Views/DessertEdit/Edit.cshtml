@model DicentDraw.Models.Dessert

@{
    ViewBag.Title = "編輯點心";
}
@section Styles{
    <style>
        #DessertIntroduction{
            width:300px;
            height:200px;
        }
    </style>
}
<h2>編輯點心</h2>

@using (Html.BeginForm("Edit", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-10 col-md-offset-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DessertID)

        <div class="form-group">
            @Html.LabelFor(model => model.DessertName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DessertName, new { htmlAttributes = new { @class = "k-textbox" } })
                @Html.ValidationMessageFor(model => model.DessertName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DessertPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DessertPrice, new { htmlAttributes = new { @class = "k-textbox" } })
                @Html.ValidationMessageFor(model => model.DessertPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DessertKind, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DessertKind, new { htmlAttributes = new { @class = "k-textbox" } })*@
                @Html.Kendo().DropDownList().Name("DessertKind").BindTo(ViewBag.selectKind as SelectList)
                @Html.ValidationMessageFor(model => model.DessertKind, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DessertIntroduction, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DessertIntroduction, new { htmlAttributes = new { @class = "k-textbox" } })
                @Html.ValidationMessageFor(model => model.DessertIntroduction, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DessertImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.DessertImage)
                @*@Html.EditorFor(model => model.DessertImage, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="file" name="DessertImage2" />
                @Html.ValidationMessageFor(model => model.DessertImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsOnSale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsOnSale)
                    @Html.ValidationMessageFor(model => model.IsOnSale, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="k-button" />
            </div>
        </div>
    </div>
}
