@model IEnumerable<DicentDraw.Models.OrderDetails>
@{
    int total = Model.Sum(x => x.DessertAmount * x.Dessert.DessertPrice);
    total = total + Model.FirstOrDefault().Gift.GiftPrice;
}
<div class="col-md-12">
    <h3 class="text-center">使用禮盒:@Model.FirstOrDefault().Gift.GiftName</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dessert.DessertName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DessertAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dessert.DessertName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DessertAmount)
                </td>
            </tr>
        }

    </table>
    <h4>總共:@total 元</h4>
</div>
